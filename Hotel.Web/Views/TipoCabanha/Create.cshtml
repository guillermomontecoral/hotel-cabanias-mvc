@*@model LogicaNegocio.Entidades.TipoCabanha*@
@model Hotel.Web.Models.TipoCabanhaModel


@{
    ViewData["Title"] = "Crear Tipo Cabaña";
}

<h1>Crear nuevo Tipo de Cabaña</h1>

<hr />
@if (@TempData["TiposCabanhaVacios"] != null)
{
    <div class="mt-3">
        <p class="fw-bold alert alert-info">@TempData["TiposCabanhaVacios"]</p>
    </div>
}

<div class="mt-5">
    <form asp-action="Create" class="row g-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group mb-3 col-md-8">
            <label asp-for="Nombre" class="control-label pb-2"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group mb-3 col-md-4">
            <label class="control-label pb-2">Costo Por Huesped</label>
            <div class="input-group mb-3 col-md-4">
                <span class="input-group-text">$</span>
                <input type="number" type="text" asp-for="CostoPorHuesped" class="form-control" aria-label="Amount (to the nearest dollar)">
                <span asp-validation-for="CostoPorHuesped" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group mb-3">
            <label class="control-label pb-2">Descripción</label>
            <textarea asp-for="Descripcion" class="form-control"></textarea>
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Agregar" class="btn btn-primary" />
        </div>
    </form>
</div>

<div class="mt-3">
    <a asp-action="Index">Volver al listado</a>
</div>


@if (@ViewBag.Error != null)
{
    <div class="mt-3">
        <p class="text-danger">@ViewBag.Error</p>
    </div>
}

@if (@ViewBag.ErrorTope != null)
{
    <div class="mt-3">
        <p class="text-danger">@ViewBag.ErrorTope Puede hacer <a asp-controller="TopesDescripcion" asp-action="Create">click aquí</a> para hacerle el registro.</p>
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
