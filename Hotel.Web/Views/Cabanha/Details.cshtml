@*@model LogicaNegocio.Entidades.Cabanha*@
@model Hotel.Web.Models.CabanhaViewModel


@{
    ViewData["Title"] = $"Cabaña {Model.Nombre}";
}



@*<h1>Detalles</h1>

<hr />*@

<div class="card">
    <img class="card-img-top" src="~/img/fotos/@Model.NombreFoto" alt="Foto de la cabaña @Model.Nombre" />

    <div class="card-body">
        <h1 class="card-title text-uppercase">@Model.Nombre</h1>
        <p class="fs-5 fw-semibold">@ViewBag.TipoCabanha.Nombre</p>
        <hr />
        <p class="card-text">@Model.Descripcion</p>
    </div>
    <div class="d-flex flex-row flex-wrap bd-highlight my-3 mx-4 py-3 rounded shadow justify-content-evenly">
        <p class=" px-3 py-3 rounded shadow-sm"><span class="fw-bold">Número habitación:</span> @Model.NumHabitacion</p>
        <p class=" px-3 py-3 rounded shadow-sm"><span class="fw-bold">Capacidad:</span> @Model.CantMaxPersonas personas</p>
        @if (Model.Jacuzzi)
        {
            <p class=" px-3 py-3 rounded shadow-sm"><span class="fw-bold">Jacuzzi:</span> Si cuenta con jacuzzi</p>
        }
        else
        {
            <p class=" px-3 py-3 rounded shadow-sm"><span class="fw-bold">Jacuzzi:</span> No cuenta con jacuzzi</p>
        }
        @if (Model.HabilitadaParaReservas)
        {
            <p class=" px-3 py-3 rounded shadow-sm"><span class="fw-bold">Habilitada:</span> Si está habilitada</p>
        }
        else
        {
            <p class=" px-3 py-3 rounded shadow-sm"><span class="fw-bold">Habilitada:</span> No está habilitada</p>
        }
        <p class=" px-3 py-3 rounded shadow-sm"><span class="fw-bold">Costo por persona:</span> $ @ViewBag.TipoCabanha.CostoPorHuesped</p>
    </div>
    <div class="card-body">
        <a asp-controller="Mantenimiento" asp-action="Create" class="card-link" asp-route-cabanhaid="@Model.Id">Crear mantenimiento</a>
        <a asp-controller="Mantenimiento" asp-action="Index" class="card-link" asp-route-idCabanha="@Model.Id">Ver mantenimientos</a>
    </div>
</div>
<div class="row justify-content-end align-items-center gap-3 mt-4">
    <a asp-action="Edit" class="btn btn-primary p-1 col-1" asp-route-id="@Model.Id">Editar</a>
    <a asp-action="AgregarFoto" class="btn btn-primary p-1 col-2" asp-route-id="@Model.Id">Agregar foto</a>
    <a asp-action="Delete" class="btn btn-danger p-1 col-1" asp-route-id="@Model.Id">Eliminar</a>
    <div class="mt-3 text-end">
        <a asp-action="Index">Volver al listado</a>
    </div>

</div>

@if (@ViewBag.Error != null)
{
    <p class="fw-bold text-danger">@ViewBag.Error</p>
}
