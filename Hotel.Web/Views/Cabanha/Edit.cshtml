@*@model LogicaNegocio.Entidades.Cabanha*@
@model Hotel.Web.Models.CabanhaViewModel

@{
    ViewData["Title"] = $"Editar cabaña {Model.Nombre}";
}

<h1>Editar cabaña</h1>

<hr />

<div class="mt-5">
    <form asp-action="Edit" class="row gy-3 gx-5">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3 col-md-6">
            <div class="form-group mb-3">
                <label asp-for="Id" class="control-label">Identificador</label>
                <input asp-for="Id" class="form-control" readonly />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Nombre" class="control-label">Nombre</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label>Seleccione el tipo de cabaña</label>
                <select asp-for="IdTipoCabanha" asp-items="@(new SelectList(ViewBag.TipoCabanhas,"Id","Nombre"))" class="form-select">
                    <option value="-1" disabled selected>Seleccionar...</option>
                </select>
                <span asp-validation-for="IdTipoCabanha" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="NumHabitacion" class="control-label">Número habitación</label>
                <input asp-for="NumHabitacion" class="form-control" readonly/>
                <span asp-validation-for="NumHabitacion" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 col-md-6">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="jacuzzi" asp-for="Jacuzzi" />
                    <label class="form-check-label" for="jacuzzi">Tiene Jacuzzi</label>
                </div>
            </div>
            <div class="form-group mb-3 col-md-6">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="habilitadaParaReservas" asp-for="HabilitadaParaReservas" />
                    <label class="form-check-label" for="habilitadaParaReservas">Habilitada para reservas</label>
                </div>
            </div>
        </div>
        <div class="mb-3 col-md-6">
            <div class="form-group mb-3">
                <label class="control-label">Descripción</label>
                <textarea asp-for="Descripcion" class="form-control" style="height:191px;"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CantMaxPersonas" class="control-label">Capacidad</label>
                <input asp-for="CantMaxPersonas" class="form-control" />
                <span asp-validation-for="CantMaxPersonas" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-primary me-4" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Guardar Cambios
            </button>

            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">¿Realizar los cambios a @Model.Nombre?</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Cancelar</button>
                            <button type="submit" class="btn btn-outline-success">Confirmar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="mt-3 col">
    <a asp-controller="Cabanha" asp-action="Details" asp-route-id="@Model.Id">Volver a la cabaña</a>
</div>

@if (@ViewBag.ErrorTope != null)
{
    <div class="mt-3">
        <p class="text-danger">@ViewBag.ErrorTope</p>
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
