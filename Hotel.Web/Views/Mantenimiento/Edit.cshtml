@model Hotel.Web.Models.MantenimientoModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar mantenimiento</h1>

<p>@ViewData["Fecha"]</p>

<hr />
<div class="mt-5">
    <form asp-action="Edit" class="row gy-3 gx-5">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group mb-3 col-md-6">
            <label asp-for="IdCabanha" class="control-label">Identificador de la cabaña</label>
            <input asp-for="IdCabanha" class="form-control" readonly />
            <span asp-validation-for="IdCabanha" class="text-danger"></span>
        </div>
        <div class="form-group mb-3 col-md-6">
            <label asp-for="Fecha" class="control-label"></label>
            <input asp-for="Fecha" value="@ViewData["Fecha"]" class="form-control mb-2" />
            <span asp-validation-for="Fecha" class="text-danger"></span>
        </div>
        <div class="form-group mb-3 col-md-6">
            <label asp-for="CostoMantenimiento" class="control-label">Costo mantenimiento</label>
            <input type="number" asp-for="CostoMantenimiento" class="form-control" />
            <span asp-validation-for="CostoMantenimiento" class="text-danger"></span>
        </div>
        <div class="form-group mb-3 col-md-6">
            <label asp-for="RealizadoPor" class="control-label">Realizado por</label>
            <input asp-for="RealizadoPor" class="form-control" />
            <span asp-validation-for="RealizadoPor" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label class="control-label">Descripción</label>
            <textarea asp-for="Descripcion" class="form-control"></textarea>
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>
        <div class="row align-items-center">
            <div class="form-group col-1 me-5">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
            <div class="mt-3 col">
                <a asp-controller="Mantenimiento" asp-action="Index" asp-route-id="@Model.IdCabanha">Volver a la lista</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
